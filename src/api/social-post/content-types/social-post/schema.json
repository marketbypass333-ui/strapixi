{
  "kind": "collectionType",
  "collectionName": "social_posts",
  "info": {
    "singularName": "social-post",
    "pluralName": "social-posts",
    "displayName": "Social Post",
    "description": "Social media posts with platform-specific configurations"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "content": {
      "type": "text",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "excerpt": {
      "type": "text",
      "maxLength": 500,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "platforms": {
      "type": "json",
      "required": true,
      "default": []
    },
    "platformConfigs": {
      "type": "json",
      "default": {}
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "scheduled", "published", "failed", "archived"],
      "default": "draft",
      "required": true
    },
    "workflowStatus": {
      "type": "enumeration",
      "enum": ["pending", "in_review", "approved", "rejected", "published"],
      "default": "pending"
    },
    "scheduledAt": {
      "type": "datetime"
    },
    "publishedAt": {
      "type": "datetime"
    },
    "timezone": {
      "type": "string",
      "default": "UTC"
    },
    "media": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images", "videos"]
    },
    "hashtags": {
      "type": "json",
      "default": []
    },
    "mentions": {
      "type": "json",
      "default": []
    },
    "campaign": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::campaign.campaign",
      "inversedBy": "posts"
    },
    "template": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::content-template.content-template"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "approver": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "analytics": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post-analytics.post-analytics",
      "mappedBy": "post"
    },
    "abTestVariant": {
      "type": "string"
    },
    "abTestGroup": {
      "type": "string"
    },
    "seoTitle": {
      "type": "string",
      "maxLength": 60,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "seoDescription": {
      "type": "text",
      "maxLength": 160,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "seoKeywords": {
      "type": "json",
      "default": []
    },
    "publishErrors": {
      "type": "json",
      "default": []
    },
    "version": {
      "type": "integer",
      "default": 1
    },
    "parentPost": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::social-post.social-post"
    }
  }
}
