{
  "kind": "collectionType",
  "collectionName": "content_templates",
  "info": {
    "singularName": "content-template",
    "pluralName": "content-templates",
    "displayName": "Content Template",
    "description": "Reusable content templates for social media posts"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "content": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "category": {
      "type": "enumeration",
      "enum": ["promotional", "educational", "announcement", "engagement", "seasonal", "other"],
      "default": "other"
    },
    "platforms": {
      "type": "json",
      "required": true,
      "default": []
    },
    "variables": {
      "type": "json",
      "default": []
    },
    "defaultHashtags": {
      "type": "json",
      "default": []
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "defaultMedia": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images", "videos"]
    },
    "isPublic": {
      "type": "boolean",
      "default": false
    },
    "usageCount": {
      "type": "integer",
      "default": 0
    },
    "createdBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "tags": {
      "type": "json",
      "default": []
    }
  }
}
